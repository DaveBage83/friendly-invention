<% include ./partials/header %>
    
<div class = "container">
    <div class = "jumbotron">
        <div class="row">
            <div class="col-lg-2">
                <h1><img id="icon" src = "https://www.seeklogo.net/wp-content/uploads/2014/10/newcastle-united-logo-preview.png"> 
            </div> 
            <div class="col-lg-10">
                <h1>Welcome to the NUFC Blog</h1>
                <div class="row">
                    <div class="col-lg-12">
                        <h2>News, views and commentary on all things Toon</h2>
                    </div>
                </div>
            </div>
        </div>    
        <!--<h2>News,  views and commentary on all things Toon!</h2>-->
    </div>
    <div class = "blogsList">
        <% blogs.forEach(function(blog){ %>
                    <div class = "row">
                        <a class = "col-md-12" href = "/blogs/<%= blog._id %>"><h1><%= blog.title %></h1></a>
                    </div> 
                    <div class = "row meta">
                        <div class = "col-md-12"><%= blog.created.toDateString() %></div>
                    </div>
                    <div class= "row">
                        <img class = "col-md-4 img-responsive" src="<%= blog.image %>">
                        <div class ="col-md-8"><% if(blog.body) { %><%-blog.body.substring(0,300)%>... <% } %></div>
                    </div>
                    <hr class = "style-two">
            <% }) %>
    </div>
</div>








<% include ./partials/footer %>