
<% include ./partials/header %>

<div class = "container">
    <div class="jumbotron">
        <h3 class = "edit">Edit "<%=blog.title%>" blog</h3>
    </div>
<form action = "/blogs/<%=blog._id%>?_method=PUT" method = "POST">
    <div class = "form-group">
        <label for = "blogTitle">Blog title</label>
        <input type = "text" class = "form-control" name = "blog[title]" value="<%=blog.title%>">
    </div>
    <div class = "form-group">
        <label for = "blogImage">Image</label>
        <input type = "text" class = "form-control" name = "blog[image]" value="<%=blog.image%>">
    </div>
    <div class = "form-group">
        <label for = "blogContent">Content</label>
        <textarea class = "form-control" rows ="8" name = "blog[body]"><%=blog.body%></textarea>
    </div>
    <div class = "form-group">
        <label for = "blogImageTwo">Image 2</label>
        <input type = "text" class = "form-control" name = "blog[imageTwo]" value="<%=blog.imageTwo%>">
    </div>
    <div class = "form-group">
        <label for = "blogContentTwo">Content</label>
        <textarea class = "form-control" rows ="8" name = "blog[bodyTwo]"><%=blog.bodyTwo%></textarea>
    </div>
    <button type = "submit" class = "btn btn-success">Submit</button>
</form>


<a id="home" href="/" class = "btn btn-primary">To home page</a>

</div>










<% include ./partials/footer %>