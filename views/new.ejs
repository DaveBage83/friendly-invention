<% include ./partials/header %>

<div class = "container">
<form action = "/blogs" method = "POST">
    <div class = "form-group">
        <label for = "blogTitle">Blog title</label>
        <input type = "text" class = "form-control" name = "blog[title]" placeholder = "Enter blog title">
    </div>
    <div class = "form-group">
        <label for = "blogImage">Image</label>
        <input type = "text" class = "form-control" name = "blog[image]" placeholder = "Enter image URL">
    </div>
    <div class = "form-group">
        <label for = "blogContent">Content</label>
        <textarea class = "form-control" rows ="8" name = "blog[body]" placeholder = "Enter content here"></textarea>
    </div>
    <div class = "form-group">
        <label for = "blogImageTwo">Image 2</label>
        <input type = "text" class = "form-control" name = "blog[imageTwo]" placeholder = "Enter image URL">
    </div>
    <div class = "form-group">
        <label for = "blogContentTwo">Content</label>
        <textarea class = "form-control" rows ="8" name = "blog[bodyTwo]" placeholder = "Enter content here"></textarea>
    </div>
    <button type = "submit" class = "btn btn-success">Submit</button>
</form>


<a id="home" href="/" class = "btn btn-primary">To home page</a>

</div>










